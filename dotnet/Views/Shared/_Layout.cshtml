<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnet</title>
    <link rel="stylesheet" href="~/css/tailwinds.out.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/scrollbar.css" asp-append-version="true" />
</head>
<body class="bg-slate-100">
    <div class="min-h-screen flex flex-col">
        <header class="bg-white shadow border-b h-20">
            <nav class="px-3 sm:px-20 md:px-40 xl:px-96 py-3">
                <div class="flex gap-3">
                    <div class="my-auto cursor-pointer p-4 -ml-4 hover:text-blue-500">
                        <partial name="~/wwwroot/icons/menu.cshtml" model='"h-6 w-6"' />
                    </div>
                    <img src="~/icons/logo.png" alt="logo" class="w-28 h-14" />
                </div>
            </nav>
        </header>

        <main role="main" class="px-3 sm:px-20 md:px-40 xl:px-96 py-7 flex-grow h-1">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white shadow border-t h-20">
        <div class="px-3 sm:px-20 md:px-40 xl:px-96 h-full py-3">
            <div class="flex h-full">
                <p class="my-auto">This is footer >:)</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>